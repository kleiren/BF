<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Socket"
            android:id="@+id/btnsocket"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Conection"
            android:layout_above="@+id/btnOn"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="check socket"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/Echo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Echo"
            android:layout_above="@+id/btnOff"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/txtArduino"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_below="@+id/txtArduino"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

